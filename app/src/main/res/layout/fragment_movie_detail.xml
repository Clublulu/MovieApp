<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="movie"
            type="com.udacity.android.popularmovies.model.Movie" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/darker_gray" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_activity_horizontal_margin"
                android:layout_marginTop="@dimen/detail_activity_vertical_margin"
                android:layout_marginRight="@dimen/detail_activity_horizontal_margin"
                android:layout_marginBottom="@dimen/detail_activity_vertical_margin">

                <TextView
                    android:id="@+id/release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DetailLabelHeading"
                    android:text="@{movie.releaseDate}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="December 18, 2002" />

                <TextView
                    android:id="@+id/average_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fragment_movie_detail_average_rating_margin"
                    style="@style/DetailLabelHeading"
                    android:text="@{movie.averageRating}"
                    app:layout_constraintLeft_toRightOf="@id/release_date"
                    app:layout_constraintTop_toTopOf="@id/release_date"
                    tools:text="7.5 / 10" />

                <TextView
                    android:id="@+id/movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fragment_movie_detail_description_margin_top"
                    style="@style/DetailLabelHeading"
                    android:text="@{movie.description}"
                    app:layout_constraintTop_toBottomOf="@id/release_date"
                    app:layout_constraintLeft_toLeftOf="@id/release_date"
                    tools:text="Set in the fictional world of Middle-earth,
                                the films follow the hobbit Frodo Baggins as he and the Fellowship
                                embark on a quest to destroy the One Ring, to ensure the destruction of its maker,
                                the Dark Lord Sauron"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>