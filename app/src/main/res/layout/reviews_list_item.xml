<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="review"
            type="com.udacity.android.popularmovies.model.Review" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/review_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{review.description}"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/msg_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/tools_review_description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/review_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{review.author}"
            android:paddingLeft="@dimen/padding_small"
            android:textSize="@dimen/msg_text_size"
            app:layout_constraintStart_toStartOf="@+id/review_description"
            app:layout_constraintTop_toBottomOf="@+id/review_description"
            tools:text="@string/tools_review_author" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada"
            app:layout_constraintBottom_toBottomOf="@+id/review_author"
            app:layout_constraintStart_toStartOf="@+id/review_author"
            app:layout_constraintTop_toBottomOf="@+id/review_author" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>
